<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/challenge_hibermart</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>

        <property name="show_sql">true</property>
        <mapping class="com.danamon.challengehibermart.model.Customer"/>
        <mapping class="com.danamon.challengehibermart.model.Product"/>
        <mapping class="com.danamon.challengehibermart.model.Transaction"/>
        <mapping class="com.danamon.challengehibermart.model.TransactionDetail"/>
    </session-factory>
</hibernate-configuration>